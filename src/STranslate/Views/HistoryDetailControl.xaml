<UserControl
    x:Class="STranslate.Views.HistoryDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:STranslate.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:STranslate.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:HistoryDetailViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="{Binding HistoryModel.SourceText}" />
        <TextBlock Text="{Binding HistoryModel.Time}" />
        <TextBlock Text="{Binding HistoryModel.SourceLang}" />
        <TextBlock Text="{Binding HistoryModel.TargetLang}" />
    </StackPanel>
</UserControl>
