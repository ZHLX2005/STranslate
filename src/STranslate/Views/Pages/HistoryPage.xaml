<ui:Page
    x:Class="STranslate.Views.Pages.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cnvt="clr-namespace:STranslate.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/zggsong/2022/xaml"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:STranslate.ViewModels.Pages"
    Title="History"
    d:DataContext="{d:DesignInstance Type=vm:HistoryViewModel,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="850"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ui:Page.Resources>
        <s:BindingProxy x:Key="VmProxy" Data="{Binding RelativeSource={RelativeSource AncestorType=ui:Page}, Path=DataContext}" />
    </ui:Page.Resources>
    <Grid Margin="20,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock
                DockPanel.Dock="Left"
                Style="{DynamicResource {x:Static ui:ThemeKeys.SubtitleTextBlockStyleKey}}"
                Text="{DynamicResource History}" />
        </DockPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="200" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="3*" MinWidth="300" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <TextBox
                    x:Name="PART_SearchBox"
                    Margin="0,0,5,0"
                    VerticalAlignment="Top"
                    ui:ControlHelper.PlaceholderText="请输入搜索内容..."
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                <ui:ScrollViewerEx Grid.Row="1">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="ScrollChanged">
                            <i:InvokeCommandAction Command="{Binding ScrollChangedCommand}" PassEventArgsToCommand="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox
                        Margin="0,0,5,0"
                        Background="Transparent"
                        ItemsSource="{Binding HistoryItems}"
                        SelectedItem="{Binding SelectedItem}">
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Command="{Binding Source={StaticResource VmProxy}, Path=Data.RefreshCommand}" Header="刷新">
                                    <MenuItem.Icon>
                                        <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.ArrowSync_20_Regular}" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListBox.ContextMenu>

                        <ListBox.ItemContainerStyle>
                            <Style BasedOn="{StaticResource {x:Type ListBoxItem}}" TargetType="ListBoxItem">
                                <Setter Property="Height" Value="40" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="Padding" Value="10,0" />
                                <!--<Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListMediumBrush}" />
                                    </Trigger>
                                </Style.Triggers>-->
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Text="{Binding SourceText}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ui:ScrollViewerEx>

                <Border Grid.Row="2" Background="{DynamicResource {x:Static ui:ThemeKeys.SystemFillColorNeutralBackgroundBrushKey}}">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="{DynamicResource STControlFontSize12}">
                        <Run Text="共" />
                        <Run Text=" " />
                        <Run Text="{Binding TotalCount}" />
                        <Run Text=" " />
                        <Run Text="项" />
                    </TextBlock>
                </Border>
            </Grid>

            <GridSplitter
                Grid.Column="1"
                Margin="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{DynamicResource CardStrokeColorDefaultBrush}"
                ResizeBehavior="PreviousAndNext"
                ResizeDirection="Columns" />
            <ui:ScrollViewerEx Grid.Column="2" Margin="20,0,0,0">
                <ContentControl Content="{Binding HistoryContent}" />
            </ui:ScrollViewerEx>
        </Grid>
    </Grid>
</ui:Page>